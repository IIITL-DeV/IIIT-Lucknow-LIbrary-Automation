<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeAdministration"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:background="@color/purple_500"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="IIITL Library"
            android:textSize="@dimen/_15sdp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="start"
            android:layout_marginStart="@dimen/_10sdp"/>

        <ImageView
            android:id="@+id/Logout"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:background="@drawable/logout"
            android:layout_marginEnd="@dimen/_10sdp"
            android:contentDescription="exit button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_below="@+id/toolbar"
        android:gravity="center">

        <TextView
            android:id="@+id/add_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Book"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_20sdp"
            android:background="@drawable/signin_shape"
            android:padding="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/issue_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issue Book"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_20sdp"
            android:background="@drawable/signin_shape"
            android:padding="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/show_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Show Books"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_20sdp"
            android:background="@drawable/signin_shape"
            android:padding="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"/>

    </LinearLayout>




</RelativeLayout>