<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_gravity="center">

    <!--<TextView
        android:id="@+id/txtclose"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:textColor="@color/white"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/spartan_bold"
            android:gravity="center"
            android:text="Add book details"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/book_image"
            android:layout_width="@dimen/_58sdp"
            android:layout_height="@dimen/_58sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/addphoto1"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <EditText
            android:id="@+id/add_book_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/edit_text_shape"
            android:fontFamily="@font/spartan_regular"
            android:hint="Book ID"
            android:textSize="@dimen/_13sdp"
            android:padding="@dimen/_10sdp"
            android:autofillHints="yes"
            android:inputType="textAutoComplete" />


        <EditText
            android:id="@+id/add_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/edit_text_shape"
            android:fontFamily="@font/spartan_regular"
            android:hint="Book Name"
            android:textSize="@dimen/_13sdp"
            android:padding="@dimen/_10sdp"
            android:autofillHints="yes"
            android:inputType="textAutoComplete" />

        <EditText
            android:id="@+id/add_book_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/edit_text_shape"
            android:fontFamily="@font/spartan_regular"
            android:hint="Book Category"
            android:textSize="@dimen/_13sdp"
            android:inputType="textAutoComplete"
            android:padding="@dimen/_10sdp"
            android:autofillHints="yes" />

        <EditText
            android:id="@+id/add_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/edit_text_shape"
            android:fontFamily="@font/spartan_regular"
            android:hint="Author"
            android:textSize="@dimen/_13sdp"
            android:inputType="textPersonName|textCapWords"
            android:padding="@dimen/_10sdp"
            android:autofillHints="yes" />

        <EditText
            android:id="@+id/add_book_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/edit_text_shape"
            android:fontFamily="@font/spartan_regular"
            android:hint="Quantity"
            android:textSize="@dimen/_13sdp"
            android:inputType="numberDecimal"
            android:padding="@dimen/_10sdp"
            android:autofillHints="yes" />
        <EditText
            android:id="@+id/book_drive_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/edit_text_shape"
            android:fontFamily="@font/spartan_regular"
            android:hint="Book soft copy link (optional)"
            android:textSize="@dimen/_13sdp"
            android:inputType="textPersonName|textCapWords"
            android:padding="@dimen/_10sdp"
            android:autofillHints="yes" />

        <TextView
            android:id="@+id/txt_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/signin_shape"
            android:gravity="center"
            android:padding="@dimen/_6sdp"
            android:text="Add"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />
    </LinearLayout>


</LinearLayout>