<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserPortal.UserProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/purple_200"
        android:orientation="vertical"
        android:id="@+id/upper_layout"
        android:layout_height="@dimen/_180sdp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_180sdp"
            android:id="@+id/profileImage"
            android:background="@drawable/default_profile_image"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_180sdp"/>
    </LinearLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_gravity="center_horizontal"
         android:layout_marginLeft="@dimen/_20sdp"
         android:layout_height="match_parent">
         <TextView
             android:layout_width="match_parent"
             android:text="Name: "
             android:textSize="@dimen/_20sdp"
             android:layout_margin="@dimen/_10sdp"
             android:textStyle="bold"
             android:id="@+id/user_nameTV"
             android:layout_height="wrap_content"/>
         <TextView
             android:layout_width="match_parent"
             android:text="Email: "
             android:textSize="@dimen/_20sdp"
             android:layout_margin="@dimen/_10sdp"
             android:textStyle="bold"
             android:layout_below="@+id/user_nameTV"
             android:id="@+id/user_emailTV"
             android:layout_height="wrap_content"/>
         <TextView
             android:layout_width="match_parent"
             android:text="Roll No: "
             android:textSize="@dimen/_20sdp"
             android:textStyle="bold"
             android:layout_margin="@dimen/_10sdp"
             android:layout_below="@+id/user_emailTV"
             android:id="@+id/user_rollTV"
             android:layout_height="wrap_content"/>

     </RelativeLayout>


</LinearLayout>