<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserPortal.UserProfile">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/_180sdp">
         <ImageView
             android:layout_width="match_parent"
             android:id="@+id/coverImage"
             android:background="@drawable/developers_image"
             android:layout_height="match_parent">

         </ImageView>
         <de.hdodenhof.circleimageview.CircleImageView
             android:id="@+id/add_profile_image"
             android:layout_width="@dimen/_58sdp"
             android:layout_height="@dimen/_58sdp"
             android:layout_marginTop="@dimen/_115sdp"
             android:layout_marginStart="@dimen/_130sdp"
             android:src="@drawable/addphoto1"
             app:civ_border_color="#FF000000"
             app:civ_border_width="2dp" />
     </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:id="@+id/Rl1"
         android:layout_gravity="center_horizontal"
         android:layout_marginLeft="@dimen/_20sdp"
         android:layout_height="match_parent">
         <TextView
             android:layout_width="match_parent"
             android:text="Name: "
             android:textSize="@dimen/_20sdp"
             android:layout_margin="@dimen/_10sdp"
             android:textStyle="bold"
             android:id="@+id/user_nameTV"
             android:layout_height="wrap_content"/>
         <TextView
             android:layout_width="match_parent"
             android:text="Email: "
             android:textSize="@dimen/_20sdp"
             android:layout_margin="@dimen/_10sdp"
             android:textStyle="bold"
             android:layout_below="@+id/user_nameTV"
             android:id="@+id/user_emailTV"
             android:layout_height="wrap_content"/>
         <TextView
             android:layout_width="match_parent"
             android:text="Roll No: "
             android:textSize="@dimen/_20sdp"
             android:textStyle="bold"
             android:layout_margin="@dimen/_10sdp"
             android:layout_below="@+id/user_emailTV"
             android:id="@+id/user_rollTV"
             android:layout_height="wrap_content"/>

     </RelativeLayout>


</LinearLayout>