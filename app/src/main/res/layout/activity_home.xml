<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/drawerlayout" android:fitsSystemWindows="true" tools:openDrawer="start">
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation"
        app:headerLayout="@layout/headerforsidemenu"
        app:menu="@menu/sidemenu"
        android:layout_gravity="start"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".UserPortal.Home" android:orientation="vertical">
            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/purple_500"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Book Categories"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp" />

                <ImageView
                    android:id="@+id/Logout"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/logout1"
                    android:clipToOutline="true"
                    android:contentDescription="Logout Button" />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/booksRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_510sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:layout_below="@+id/toolbar"
                android:layout_marginTop="@dimen/_5sdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_below="@+id/booksRecyclerView">
                <TextView
                    android:id="@+id/my_books"
                    android:layout_width="@dimen/_150sdp"
                    android:text="ShowMyBooks"
                    android:fontFamily="@font/spartan_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:textAlignment="center"
                    android:background="@color/purple_500"
                    android:layout_height="@dimen/_25sdp"/>
                <TextView
                    android:id="@+id/wish_list"
                    android:layout_width="@dimen/_150sdp"
                    android:text="WishList"
                    android:fontFamily="@font/spartan_bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/_16sdp"
                    android:background="@color/purple_500"
                    android:layout_height="@dimen/_25sdp"/>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>
