<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="match_parent">
    <!--<TextView
        android:id="@+id/txtclose"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:textColor="@color/white"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_10sdp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issua a Book"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/spartan_bold"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_20sdp"/>


        <EditText
            android:id="@+id/issue_book_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Book Id"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/spartan_regular"
            android:background="@drawable/edit_text_shape"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:autofillHints="yes"
            android:inputType="textPersonName|textCapWords" />


        <EditText
            android:id="@+id/issue_book_student_enrollment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enrolment Number"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/spartan_regular"
            android:background="@drawable/edit_text_shape"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/issue_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Issue Date"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/spartan_regular"
            android:background="@drawable/edit_text_shape"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/return_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Return Date"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/spartan_regular"
            android:background="@drawable/edit_text_shape"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/issue_book_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issue"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:background="@drawable/signin_shape"
            android:padding="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"/>

    </LinearLayout>


</LinearLayout>